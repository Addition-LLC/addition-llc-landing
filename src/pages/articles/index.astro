---
import Layout from '../../layouts/Layout.astro';
import Container from '../../components/Container.astro';

// Mock data to demonstrate the design. You can replace this with your getCollection logic.
const mockArticles = [
  {
    slug: 'ai-in-business-automation',
    data: {
      title: 'The Real-World Impact of AI in Business Automation',
      description: 'Discover how AI is moving beyond hype to deliver tangible results in process automation, customer service, and data analytics.',
      author: 'Goliath Oboyo',
      pubDate: new Date('2025-10-04'),
      image: 'https://placehold.co/800x400/1e293b/94a3b8?text=AI+Automation',
      category: 'Artificial Intelligence'
    }
  },
  {
    slug: 'building-scalable-web-apps',
    data: {
      title: '5 Principles for Building Scalable Web Applications',
      description: 'From microservices to database optimization, we explore the core principles that ensure your application can handle growth.',
      author: 'Biniyam Ajaw',
      pubDate: new Date('2025-09-22'),
      image: 'https://placehold.co/600x400/1e293b/94a3b8?text=Scalable+Apps',
      category: 'Web Development'
    }
  },
  {
    slug: 'devops-culture',
    data: {
      title: 'Why a DevOps Culture is Crucial for Modern Tech Teams',
      description: 'It\'s more than just tools. We break down the cultural shifts required to successfully implement DevOps and accelerate delivery.',
      author: 'Devin Wise',
      pubDate: new Date('2025-09-15'),
      image: 'https://placehold.co/600x400/1e293b/94a3b8?text=DevOps+Culture',
      category: 'Cloud & Infrastructure'
    }
  },
];

const featuredArticle = mockArticles[0];
const otherArticles = mockArticles.slice(1);
---

<Layout title="Addition+ | Blog">
  <main style="font-family: 'Space Grotesk', sans-serif;">
    <Container>
      <div class="py-16 px-4 mx-auto max-w-screen-xl lg:py-24 lg:px-6">
        
        <!-- Header Section -->
        <div class="mx-auto max-w-screen-md text-center lg:mb-16 mb-8">
          <h2 class="mb-4 text-4xl lg:text-5xl tracking-tight font-extrabold text-slate-900 dark:text-white">Our Blog</h2>
          <p class="font-light text-slate-500 sm:text-xl dark:text-slate-400">Insights on AI, software development, and the future of technology from the Addition+ team.</p>
        </div>

        <div class="grid lg:grid-cols-12 gap-8">
          <!-- Main Content: Articles -->
          <div class="lg:col-span-8">
            <!-- Featured Article -->
            <a href={`/articles/${featuredArticle.slug}`} class="group block mb-8">
              <div class="overflow-hidden rounded-lg shadow-lg">
                <img src={featuredArticle.data.image} alt={`Image for ${featuredArticle.data.title}`} class="w-full h-auto object-cover transition-transform duration-300 group-hover:scale-105" />
              </div>
              <p class="text-blue-600 dark:text-blue-400 font-semibold text-sm mt-4">{featuredArticle.data.category}</p>
              <h3 class="mt-2 text-2xl font-bold text-slate-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">{featuredArticle.data.title}</h3>
              <p class="mt-2 text-slate-600 dark:text-slate-400">{featuredArticle.data.description}</p>
              <div class="mt-3 text-sm text-slate-500 dark:text-slate-500">{featuredArticle.data.author} &bull; {featuredArticle.data.pubDate.toDateString()}</div>
            </a>
            
            <hr class="border-slate-200 dark:border-slate-700 my-8"/>

            <!-- Other Articles Grid -->
            <div class="grid gap-8 sm:grid-cols-2">
              {otherArticles.map(article => (
                <a href={`/articles/${article.slug}`} class="group block">
                  <div class="overflow-hidden rounded-lg shadow-lg">
                    <img src={article.data.image} alt={`Image for ${article.data.title}`} class="w-full h-auto object-cover transition-transform duration-300 group-hover:scale-105" />
                  </div>
                  <p class="text-blue-600 dark:text-blue-400 font-semibold text-sm mt-4">{article.data.category}</p>
                  <h4 class="mt-1 text-lg font-bold text-slate-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">{article.data.title}</h4>
                  <div class="mt-2 text-sm text-slate-500 dark:text-slate-500">{article.data.author} &bull; {article.data.pubDate.toDateString()}</div>
                </a>
              ))}
            </div>
          </div>

          <!-- Sidebar -->
          <aside class="lg:col-span-4 space-y-8">
            <!-- Search Bar -->
            <div class="p-6 rounded-lg bg-slate-100 dark:bg-slate-800">
              <h4 class="font-bold text-lg text-slate-900 dark:text-white mb-3">Search</h4>
              <form class="relative">
                <input type="search" placeholder="Search articles..." class="w-full rounded-md border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-700 text-slate-900 dark:text-slate-100 focus:ring-blue-500 focus:border-blue-500" />
                <button type="submit" class="absolute right-2 top-1/2 -translate-y-1/2 p-2 text-slate-500 hover:text-blue-600">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
                </button>
              </form>
            </div>

            <!-- Social Links -->
            <div class="p-6 rounded-lg bg-slate-100 dark:bg-slate-800">
              <h4 class="font-bold text-lg text-slate-900 dark:text-white mb-4">Follow Us</h4>
              <div class="flex space-x-4">
                {/* Replace # with your actual social media links */}
                <a href="#" class="text-slate-500 hover:text-blue-600 dark:hover:text-blue-400">
                  <span class="sr-only">LinkedIn</span>
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
                </a>
                <a href="#" class="text-slate-500 hover:text-blue-600 dark:hover:text-blue-400">
                   <span class="sr-only">Twitter</span>
                   <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616v.064c0 2.298 1.634 4.212 3.793 4.649-.562.152-1.158.23-1.778.23-.304 0-.6-.028-.888-.083.623 1.884 2.433 3.267 4.573 3.305-1.625 1.272-3.673 2.03-5.902 2.03-.384 0-.76-.024-1.135-.067 2.099 1.353 4.604 2.148 7.29 2.148 8.568 0 13.255-7.098 13.255-13.254 0-.202-.005-.403-.014-.602.91-.658 1.7-1.477 2.323-2.41z"/></svg>
                </a>
              </div>
            </div>
          </aside>
        </div>

      </div>
    </Container>
  </main>
</Layout>
