---
import Container from "./Container.astro"
import Topic from "./Topic.astro";
import teamData from './Data/team.json';
---
<Container>
    <div class="relative flex flex-col items-center md:flex-row" style="font-family: 'Space Grotesk', sans-serif;">
    <Topic title="Our Process" description="A Step-by-Step Guide to Achieving Your Business Goals"/>
  </div>

  <section class="hidden md:block mt-12">
    <div class="relative">
      <div class="pointer-events-none absolute inset-x-0 top-[22px] h-[2px] bg-blue-100"></div>

      <ol class="grid grid-cols-6 gap-8">
        {teamData.process.map((item) => (
          <li class="relative flex flex-col items-center">
            <div class="h-12 w-12 flex items-center justify-center rounded-full bg-blue-600 text-white text-lg font-bold shadow-lg z-10">
              {item.index}
            </div>
            <div class="mt-6 w-full rounded-2xl border border-slate-200 bg-white shadow-lg transition-all duration-300 hover:-translate-y-2 hover:shadow-xl hover:shadow-blue-600/10 hover:border-blue-300 h-full min-h-[220px] flex flex-col">
              <div class="p-5 flex flex-col grow">
                <h4 class="text-base font-bold text-slate-900">{item.label}</h4>
                <p class="mt-2 text-sm text-slate-600 leading-relaxed">
                  {item.content}
                </p>
              </div>
            </div>
          </li>
        ))}
      </ol>
    </div>
  </section>

  <section class="md:hidden mt-8" style="font-family: 'Space Grotesk', sans-serif;">
    <div class="grid grid-cols-2 gap-4">
      {teamData.process.map((item) => (
        <div class="rounded-2xl border border-slate-200 bg-white shadow-lg p-4 flex flex-col">
          <div class="mb-3 inline-flex h-10 w-10 items-center justify-center rounded-full bg-blue-600 text-white text-base font-bold">
            {item.index}
          </div>
          <h4 class="text-sm font-bold leading-tight text-slate-900">{item.label}</h4>
          <p class="mt-1 text-xs text-slate-600 leading-relaxed">
            {item.content}
          </p>
        </div>
      ))}
    </div>
  </section>

    <div class="relative flex flex-col items-center md:flex-row pt-24" style="font-family: 'Space Grotesk', sans-serif;">
    <Topic title="Our Team" description="Meet the skilled and experienced team behind our successful company"/>
  </div>

  <section id="team" class="py-5">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
      {teamData.team.map((member) => (
        <article class="group relative overflow-hidden rounded-3xl border border-slate-200 bg-white shadow-lg transition hover:-translate-y-1 hover:shadow-xl">
          {member.link && (
            <a href={member.link} target="_blank" rel="noopener noreferrer" class="absolute right-4 top-4 z-10 inline-flex h-10 w-10 items-center justify-center rounded-full border border-slate-300 bg-white/50 backdrop-blur-sm shadow-sm transition hover:-translate-y-0.5 hover:shadow-md">
              <img src="/team/lng.svg" alt="LinkedIn" class="h-5 w-5" />
            </a>
          )}

          <div class="relative p-2 pb-0">
            <div class="overflow-hidden rounded-2xl border border-slate-200">
              <div class="aspect-[4/3] w-full">
                <img
                  src={member.profile}
                  alt={member.name}
                  class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-[1.03]"
                  loading="lazy"
                  decoding="async"
                />
              </div>
            </div>
          </div>

          <div class="px-6 pt-5 pb-6">
            <div class="mb-4 h-1.5 w-16 rounded-full bg-blue-600"></div>
            <h3 class="text-xl font-semibold text-black">{member.name}</h3>
            <p class="mt-1 text-base text-zinc-800">{member.title}</p>
            <p class="mt-4 text-sm md:text-base text-zinc-900 leading-relaxed">
              {member.description}
            </p>
          </div>
        </article>
      ))}
    </div>

    <div class="mt-8 flex w-full items-center justify-center">
      <a href="/#team" class="inline-flex items-center justify-center rounded-xl px-8 py-4 text-lg font-medium bg-blue-600 text-white hover:bg-blue-700 active:bg-blue-800 shadow-lg hover:shadow-xl transition-all">
        See all team
      </a>
    </div>
  </section>
</Container>