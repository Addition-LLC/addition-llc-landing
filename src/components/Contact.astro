---
import Container from "./Container.astro"
import Topic from "./Topic.astro";
---

<Container>
  <section id="contact" class="py-10" style="font-family: 'Space Grotesk', sans-serif;">
    <div class="text-center">
      <Topic title="Contact Us" description="Connect with Us: Let's Discuss Your AI and Software Needs" />
    </div>

    <div class="mt-12 max-w-6xl mx-auto">
      <div class="overflow-hidden rounded-2xl border border-slate-200 bg-white shadow-lg">
        <div class="grid grid-cols-1 lg:grid-cols-2">
          
          <div class="p-8 md:p-12">
            <form action="#" class="space-y-6">
              <div>
                <label for="name" class="block mb-2 text-sm font-semibold text-slate-700">Full Name</label>
                <input type="text" id="name" class="block w-full rounded-md border-slate-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" placeholder="Goliath Oboyo" required>
              </div>
              
              <div>
                <label for="email" class="block mb-2 text-sm font-semibold text-slate-700">Email Address</label>
                <input type="email" id="email" class="block w-full rounded-md border-slate-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" placeholder="you@company.com" required>
              </div>

              <div>
                <label for="message" class="block mb-2 text-sm font-semibold text-slate-700">Message</label>
                <textarea id="message" rows="6" class="block w-full rounded-md border-slate-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" placeholder="How can we help you?"></textarea>
              </div>
              
              <button type="submit" class="w-full rounded-lg bg-blue-600 px-8 py-3 text-lg font-semibold text-white transition-all duration-300 hover:bg-blue-700 hover:shadow-md">
                Send Message
              </button>
            </form>
          </div>

          <div class="hidden lg:flex flex-col justify-center bg-slate-50 p-8 md:p-12 border-l border-slate-200">
            <div class="space-y-8">

              <div class="flex items-start gap-4">
                <div class="flex-shrink-0">
                  <div class="inline-flex h-12 w-12 items-center justify-center rounded-md bg-blue-100 text-blue-600">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-6 w-6"><path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" /><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" /></svg>
                  </div>
                </div>
                <div>
                  <h4 class="text-lg font-bold text-slate-900">Our Office</h4>
                  <p class="mt-1 text-slate-600">
                    131 Continental Dr, Suite 305<br>Newark, DE 19713 US
                  </p>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="flex-shrink-0">
                  <div class="inline-flex h-12 w-12 items-center justify-center rounded-md bg-blue-100 text-blue-600">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 6.75z" /></svg>
                  </div>
                </div>
                <div>
                  <h4 class="text-lg font-bold text-slate-900">Call Us</h4>
                  <a href="tel:+15074814830" class="mt-1 text-slate-600 hover:text-blue-600 transition-colors">
                    +1 (507) 481-4830
                  </a>
                </div>
              </div>
              
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0">
                  <div class="inline-flex h-12 w-12 items-center justify-center rounded-md bg-blue-100 text-blue-600">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-6 w-6"><path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" /></svg>
                  </div>
                </div>
                <div>
                  <h4 class="text-lg font-bold text-slate-900">Email Us</h4>
                  <a href="mailto:contact@additionplus.ai" class="mt-1 text-slate-600 hover:text-blue-600 transition-colors">
                    contact@additionplus.ai
                  </a>
                </div>
              </div>

            </div>
          </div>

        </div>
      </div>
    </div>
  </section>
</Container>